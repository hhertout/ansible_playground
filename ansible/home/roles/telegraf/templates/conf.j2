[global_tags]
  "job" = "telegraf"

[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false

[[inputs.mem]]

[[inputs.temp]]

[[inputs.disk]]
  ignore_fs = ["tmpfs", "devtmpfs", "overlay"]

[[inputs.diskio]]

[[inputs.system]]
  fieldinclude = ["uptime"]

[[inputs.processes]]

[[inputs.swap]]

[[inputs.procstat]]
  pattern = "sshd"

[[outputs.opentelemetry]]
  service_address = "{{otel_gateway}}"
  compression = "gzip"
  insecure_skip_verify = true
