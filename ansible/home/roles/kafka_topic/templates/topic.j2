apiVersion: kafka.strimzi.io/v1beta2
kind: KafkaTopic
metadata:
  name: "{{kafka_topic_name}}"
  namespace: "{{namespace_name}}"
  labels:
    strimzi.io/cluster: "{{kafka_cluster_name}}"
spec:
  partitions: {{topic_partition_nb | default(3)}}
  replicas: {{topic_replicas_nb | default(1)}}
  config:
    retention.ms: {{topic_retention_ms | default(7200000)}}
    segment.bytes: {{topic_segment_bytes | default(1073741824)}}